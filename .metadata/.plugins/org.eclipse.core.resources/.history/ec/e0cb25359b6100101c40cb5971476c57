import java.util.Random;

public class Dado {
    private int facce; // quante facce ha il dado
    private Random random = new Random();

    public Dado(int facce) {
        // controllo: minimo 4, massimo 100, solo pari
        if (facce < 4 || facce > 100 || facce % 2 != 0) {
            this.facce = 4; // valore di default
        } else {
            this.facce = facce;
        }
    }

    public int getFacce() {
        return facce;
    }

    public int lancia() {
        return random.nextInt(facce) + 1; // restituisce numero tra 1 e facce
    }
}
