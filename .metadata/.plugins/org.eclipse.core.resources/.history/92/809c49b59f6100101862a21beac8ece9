package it.akt;
public class Program {

	public static void main(String[] args) {
		
	       Giocatore g = new Giocatore();

	        // 1. Lancio con numero di facce (valore)
	        int lancio1 = g.lanciaDado(20);
	        System.out.println("Lancio con valore 22 facce " + lancio1);

	        // 2. Lancio con oggetto Dado (riferimento)
	        Dado d = new Dado(12);
	        int lancio2 = g.lanciaDado(d);
	        System.out.println("Lancio con oggetto Dado da 66 facce " + lancio2);
	    }
	}


